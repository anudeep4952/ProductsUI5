<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" xmlns="sap.m"  xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" controllerName="ns.HTML5Module.controller.View3" displayBlock="true">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page3" title="LOGIN PAGE">
					<content>
                       
                        	<l:VerticalLayout class="sapUiContentPadding" width="100%">
                                    <Label text="Username" labelFor="usernameInput" />
                                    <Input
                                        id="usernameInput"
                                        placeholder="Enter your username"
                                        width="50%"
                                    />
                    

                                	<Label text="Password" labelFor="passwordInput" />
                                   <Input
                                        id="passwordInput"
                                        type="Password"
                                        placeholder="Enter your password"
                                        width="50%"
                                     />
                                    
                                    <Button text="Login"	press="onLogin"
						                 ariaDescribedBy="defaultButtonDescription genericButtonDescription">
				                    </Button>     
                            </l:VerticalLayout>	                                        

                    </content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>